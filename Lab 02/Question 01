#include<stdio.h>
int main(){
    int n,sume=0,counter=0,odd;
    printf("Enter Number of Elements: ");
    scanf("%d",&n);

    for(int i =0; i<n;i++ ){
        while(1){
                counter++;
            if (counter%2!=0){
                odd=counter;
                sume+=odd;
                printf("%d\n",odd);
                break;
            }
        }
    }
    printf("Sum of Odd Natural numbers:%d",sume);

return 0;
}

int main(){
    int n,sume=0,counter=0,odd,i=0;
    printf("Enter Number of Elements: ");
    scanf("%d",&n);

    while(i<n){
        while(1){
                counter++;
            if (counter%2!=0){
                odd=counter;
                sume+=odd;
                printf("%d\n",odd);
                break;
            }
        }
        i++;
    }
    printf("Sum of Odd Natural numbers:%d",sume);
return 0;
}


int main(){
    int n,sume=0,counter=0,odd,i=0;
    printf("Enter Number of Elements: ");
    scanf("%d",&n);

    do{
        while(1){
                counter++;
            if (counter%2!=0){
                odd=counter;
                sume+=odd;
                printf("%d\n",odd);
                break;
            }
        }
        i++;
    }while(i<n);
    printf("Sum of Odd Natural numbers:%d",sume);

return 0;
}
